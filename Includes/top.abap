*&SPWIZARD: INPUT MODULE FOR TC 'ITEMS_TC'. DO NOT CHANGE THIS LINE!
*&SPWIZARD: MODIFY TABLE
MODULE ITEMS_TC_MODIFY INPUT.
  MODIFY LT_ITEMS
    FROM LWA_ITEMS
    INDEX ITEMS_TC-CURRENT_LINE.
ENDMODULE.

*&SPWIZARD: INPUT MODUL FOR TC 'ITEMS_TC'. DO NOT CHANGE THIS LINE!
*&SPWIZARD: MARK TABLE
MODULE ITEMS_TC_MARK INPUT.
  DATA: g_ITEMS_TC_wa2 like line of LT_ITEMS.
    if ITEMS_TC-line_sel_mode = 1
    and LWA_ITEMS-SEL = 'X'.
     loop at LT_ITEMS into g_ITEMS_TC_wa2
       where SEL = 'X'.
       g_ITEMS_TC_wa2-SEL = ''.
       modify LT_ITEMS
         from g_ITEMS_TC_wa2
         transporting SEL.
     endloop.
  endif.
  MODIFY LT_ITEMS
    FROM LWA_ITEMS
    INDEX ITEMS_TC-CURRENT_LINE
    TRANSPORTING SEL.
ENDMODULE.

